@using Microsoft.AspNetCore.Mvc.Rendering
@model DataRecordingExportTool.Models.ViewModels.RemoveDataRowStep1ViewModel
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Table Creation";
}

<div align="center">
    <form asp-action="DeleteTableRow">
        <table>
            <tbody>
                <tr>
                    <td>
                        <label>Table: @Model.Table.Name</label>
                    </td>
                </tr>
                <table class="table-bordered" style="overflow:auto;">
                    <tbody>
                        <tr>
                            <td></td>
                            <td style="width:auto" align="left">
                                <label>Row</label>
                            </td>
                            @for (int i = 0; i < Model.Table.Columns.Count; i++)
                            {
                                <td style="width:auto" align="left">
                                    <label>@Model.Table.Columns[i].Name</label>
                                </td>
                            }
                        </tr>
                        @for (int i = 0; i < @Model.Rows.Count; i++)
                        {
                            <tr>
                                <td>
                                    <input type="radio" name="DeleteRowId" value="@i" />
                                </td>
                                <td style="width:auto" align="right">
                                    <label>@Model.Rows[i].Id</label>
                                </td>
                                @for (int i2 = 0; i2 < @Model.Rows[i].DataPoints.Count; i2++)
                                {
                                    <td style="width:auto" align="right">
                                        <label>@Model.Rows[i].DataPoints[i2].Data</label>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
                <tr>
                    <td>
                        <input type="submit" value="Delete Row" class="btn btn-primary" />
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
