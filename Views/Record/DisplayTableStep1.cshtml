@using Microsoft.AspNetCore.Mvc.Rendering
@model DataRecordingExportTool.Models.ViewModels.DisplayTableStep1ViewModel
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Table Creation";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
    }
</style>

<div class="container">
    <form asp-action="DisplayTableGoToToStep2">
        <table>
            <tbody>
                <tr>
                    <td>
                        <label>Display Data Table</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Table</label>
                        <select asp-for="@Model.TableName" asp-items="@Model.TableNames"></select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Next" class="btn btn-primary" />
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
