@using Microsoft.AspNetCore.Mvc.Rendering
@model DataRecordingExportTool.Models.ViewModels.DeleteColumnStep1ViewModel
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Table Creation";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
    }
</style>

<div class="container">
    <form asp-action="DeleteTableColumn">
        <table>
            <tbody>
                <tr>
                    <td>
                        <label>Delete Data Column</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Table: </label>
                        <label>@Model.TableName</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <select asp-for="@Model.ColumnName" asp-items="@Model.ColumnNames"></select>
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Delete Column" class="btn btn-primary" />
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
