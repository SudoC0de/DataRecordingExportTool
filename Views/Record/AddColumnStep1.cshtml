@using Microsoft.AspNetCore.Mvc.Rendering
@model DataRecordingExportTool.Models.ViewModels.AddColumnStep1ViewModel
@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@{
    ViewData["Title"] = "Table Creation";
}

<div align="center">
    <form>
        <table>
            <tbody>
                <tr>
                    <td>
                        <label>Add Data Column</label>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Table: @Model.Table.Name</label>
                    </td>
                </tr>
                <tr>
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    <label>Column: </label>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input asp-for="@Model.Column.Name" class="form-control" />
                                        <span asp-validation-for="@Model.Column.Name" class="text-danger" />
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <input type="submit" value="Next" class="btn btn-primary" />
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>
