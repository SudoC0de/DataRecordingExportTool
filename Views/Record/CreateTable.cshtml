@{
    ViewData["Title"] = "Table Creation";
}

<form method="post">
    <div align="center">
        <input type="hidden" />
        <table>
            <thead></thead>
            <tbody>
                <tr>
                    <td>
                        <h2>Create Results Database Table</h2>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div class="form-group">
                            <label class="control-label">Data Table Name</label>
                            <input class="form-control" />
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <h4>Columns</h4>
                    </td>
                </tr>
                <tr id="ColumnDefinitions">
                </tr>
                <tr>
                    <td>
                        <input type="button" class="btn btn-primary" value="Add New Column" onclick="AddNewColumn()"/>
                    </td>
                    <td>
                        <div class="form-group">
                            <input type="submit" value="Create Table" class="btn btn-primary" />
                        </div>
                    </td>
                </tr>
            </tbody>
            <tfoot></tfoot>
        </table>
    </div>
</form>
